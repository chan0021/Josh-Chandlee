<Window x:Class="WPF_JSON.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_JSON"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,-6.667,-152.333">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lstCharacter" HorizontalAlignment="Left" Height="260" Margin="28,83,0,0" VerticalAlignment="Top" Width="375" SelectionChanged="LstCharacter_SelectionChanged"/>
        <Label x:Name="lblTitle" Content="Rick and Morty Characters" HorizontalAlignment="Left" Height="49" Margin="241,29,0,0" VerticalAlignment="Top" Width="329" FontSize="24"/>
        <Button x:Name="btnSubmit" Content="Do Something" HorizontalAlignment="Left" Height="44" Margin="170,367,0,0" VerticalAlignment="Top" Width="144" Click="BtnSubmit_Click"/>
        <Image x:Name="imgCharacter" HorizontalAlignment="Left" Height="260" Margin="408,83,0,0" VerticalAlignment="Top" Width="358"/>
        <WebBrowser x:Name="wbCharacter" HorizontalAlignment="Left" Height="133" Margin="0,430,0,0" VerticalAlignment="Top" Width="783"/>

    </Grid>
</Window>
